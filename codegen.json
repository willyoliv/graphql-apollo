{
  "overwrite": true,
  "schema": "src/**/*.ts",
  "generates": {
    "src/generated/graphql.ts": {
      "plugins": [
        "typescript",
        "typescript-resolvers",
        "typescript-operations"
      ],
      "config": {
        "contextType": "../types/context#CustomContext",
        "useIndexSignature": true,
        "maybeValue": "T | null",
        "mappers": {
          "User": "../models/user.model#UserModel",
          "Post": "../models/post.model#PostModel"
        }
      }
    }
  }
}